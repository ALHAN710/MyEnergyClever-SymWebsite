{% block _site_smartMods_widget %}
    <p>Ici, vous pouver ajouter de nouveaux modules !</p>
    
    {{form_widget(form)}}

    <input type="hidden" id="widgets-count">
    <div class="form-group">
        <button type="button" id="add-smartMod" class="btn btn-primary">+</button>
    </div>
{% endblock %}

{% block _site_smartMods_entry_row %}
    {{form_widget(form)}}
{% endblock %} 

{% block _site_smartMods_entry_widget %}
    <div class="form-group" id = "block_{{id}}">
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col">
                        {{ form_widget(form.moduleId) }}
                        {{ form_errors(form.moduleId) }}
                    </div>
                    <div class="col">
                        {{ form_widget(form.modName) }}
                        {{ form_errors(form.modName) }}
                    </div>
                    <div class="col">
                        {{ form_widget(form.installationType) }}
                        {{ form_errors(form.installationType) }}
                    </div>
                    <div class="col">
                        {{ form_widget(form.modType) }}
                        {{ form_errors(form.modType) }}
                    </div>
                </div>
            </div>
            <div class="col-2">
                <button type="button" data-action="delete" data-target="#block_{{id}}" class="btn btn-danger">X</button>
            </div>
        </div>
    </div>

{% endblock %}